{
  "name": "funtodo-fullstack",
  "version": "1.0.0",
  "description": "Full stack task management application with offline functionality",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "build:all": "npm run build && npm run build:server",
    "build:server": "echo \"Server is ready to run\"",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "start": "concurrently --kill-others-on-fail \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm run preview",
    "start:prod": "concurrently --kill-others-on-fail \"npm run start:server\" \"npm run start:client\"",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "todo",
    "task-management",
    "offline",
    "react",
    "nodejs",
    "express",
    "drizzle-orm",
    "vite",
    "zustand"
  ],
  "author": "",
  "license": "ISC"
}
