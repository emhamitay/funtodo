{
  "compilerOptions": {
    // Use the latest ECMAScript module syntax (import/export)
    "module": "ESNext",

    // Use bundler module resolution (modern approach for Vite/Webpack)
    // This replaces the deprecated "baseUrl" option
    "moduleResolution": "bundler",

    // Allow importing JSON files directly
    "resolveJsonModule": true,

    // Path aliases: @/ maps to ./src/
    // Example: import Button from "@/components/Button"
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  // Only check files in the src directory
  "include": ["src"]
}
